---
import Base from '@src/layouts/Base.astro';
import Sponsors from '@src/components/sections/funding/Sponsors.astro'
import FAQs from '@src/components/sections/funding/FAQs.astro';
import WhySponsor from '@src/components/sections/funding/WhySponsor.astro';
import SponsorForm from '@src/components/sections/funding/SponsorForm.astro';
import SponsorshipTiers from '@src/components/sections/funding/SponsorshipTiers.astro';
---

<Base title="Funding & Sponsors">
    <div class="font-roboto relative overflow-hidden pt-20 text-black bg-white">
        <main>
            <section
                class="animate-fade-in mb-16 pl-20 flex h-screen flex-grow flex-col justify-center text-left"
            >
                <h1 class="animate-title mb-4 text-9xl font-extrabold">Sponsors</h1>
                <p class="animate-subtitle text-xl text-black font-semibold">
                    Learn about the people that made this conference a reality.
                </p>
            </section>

            <div class="full-width-line"></div>

            <Sponsors />

            <div class="full-width-line"></div>

            <SponsorshipTiers />

            <div class="full-width-line"></div>

			<WhySponsor />

            <div class="full-width-line"></div>

            <FAQs />

            <div class="full-width-line"></div>

            <SponsorForm />

        </main>
    </div>
</Base>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

    body {
        font-family: 'Roboto', sans-serif;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }
    @keyframes slideInFromBottom {
        from {
            transform: translateY(50px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
    .animate-title {
        animation: slideInFromBottom 0.5s ease-out;
    }
    .animate-subtitle {
        animation: slideInFromBottom 0.5s ease-out 0.2s both;
    }
    .full-width-line {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        border-top: 1px solid black;
    }
</style>