---
import NavigationOption from '@src/components/elements/navigation/NavigationOption.astro';
---

<div
	id="dropdown-overlay"
	class="hide absolute right-0 top-full w-[38rem] lg:w-[50rem] h-fit rounded-lg pt-2"
>
	<div
		class="w-full rounded-lg border-[1px] border-solid border-black bg-white px-8 py-6 font-sans text-black shadow-xl"
	>
		<div class="columns-2 lg:columns-3 gap-1">
			<NavigationOption
				title="WCUCC 2025"
				description="Register to attend in-person from may 11th - 14th"
				href="#"
			>
				<p
					class="h-full w-full rounded-md border-[1px] border-solid border-black bg-white py-10 text-center text-pink-600"
				>
					INSERT IMAGE HERE
				</p>
			</NavigationOption>

			<NavigationOption
				title="About"
				description="Learn about what our conference is about"
				href="#"
			/>
			<NavigationOption
				title="Speaker"
				description="Learn more about our valued speakers"
				href="#"
			/>
			<NavigationOption
				title="Meet the Team"
				description="Meet the team responsible for WCUCC 2025"
				href="/team"
				forceNextColumn={true}
			/>

			<NavigationOption
				title="Itinerary"
				description="Learn about whats happening at WCUCC 2025"
				href="#"
			/>
			<NavigationOption
				title="Sponsors & Funding"
				description="Discover how to support our conference and who makes it possible"
				href="/funding"
			/>
			<NavigationOption
				title="Kelowna"
				description="Learn more about the amazing city hosting our conference"
				href="/kelowna"
			/>
		</div>
	</div>
</div>

<style>
	.hide {
		display: none !important;
	}
</style>
