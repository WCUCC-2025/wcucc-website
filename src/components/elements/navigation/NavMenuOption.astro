---
type Props = {
	title: string;
	description: string;
	href: string;
};

const { title, description, href }: Props = Astro.props;
---

<a class={`${href == '#' && 'hover:cursor-not-allowed'}`} href={href} style="text-decoration: none;">
	<div
		class="flex flex-col gap-1 rounded-md p-4 transition-colors duration-200 hover:bg-gray-100"
	>
		<h6 class="m-0 p-0 text-[1rem] font-semibold uppercase">{title}</h6>
		<p class="m-0 p-0 text-[1rem] font-normal uppercase">
			{description}
		</p>
		<slot />
	</div>
</a>
