---
import NavMenuOption from '@src/components/elements/navigation/NavMenuOption.astro';
---

<div
	id="dropdownMenu"
	class="hide absolute right-0 top-12 mt-2 w-[800px] rounded-lg bg-white px-8 py-6 shadow-xl"
>
	<div class="grid grid-cols-6 gap-2">
		<div class="col-span-2">
			<NavMenuOption
				title="WCUCC 2025"
				description="Register to attend in-person from may 11th - 14th"
				href="#"
			>
			<p class="w-full h-full py-10 border-[1px] border-solid border-black rounded-md text-center text-pink-600 bg-white">INSERT IMAGE HERE</p>
			</NavMenuOption>
		</div>
		<div class="col-span-2 flex flex-col gap-2">
			<NavMenuOption
				title="About"
				description="Learn about what our conference is about"
				href="#"
			/>
			<NavMenuOption
				title="Speaker"
				description="Learn more about our valued speakers"
				href="#"
			/>
			<NavMenuOption
				title="Meet the Team"
				description="Meet the team responsible for WCUCC 2025"
				href="/team"
			/>
		</div>
		<div class="col-span-2 flex flex-col gap-2">
			<NavMenuOption
				title="Itinerary"
				description="Learn about whats happening at WCUCC 2025"
				href="#"
			/>
			<NavMenuOption
				title="Sponsors & Funding"
				description="Discover how to support our conference and who makes it possible"
				href="/funding"
			/>
			<NavMenuOption
				title="Kelowna"
				description="Learn more about the amazing city hosting our conference"
				href="/kelowna"
			/>
		</div>
	</div>
</div>

<style>
	.hide {
		display: none !important;
	}

	#dropdownMenu {
		transition: opacity 0.2s ease-in-out;
	}
</style>
