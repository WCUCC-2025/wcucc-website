---
import SlidingBox from "./SlidingBox.astro"
---

<footer
	class="inline-lock z-50 bg-white p-10"
	style="font-family: 'Satoshi', sans-serif;"
	>
	<SlidingBox />
	<div class="flex flex-col items-center justify-center gap-0 lg:hidden">
		<img src="WCUCC-Logo.svg" alt="WCUCC Logo Footer" />
		<div class="flex flex-row items-center justify-center gap-10 py-2">
			<a
				class="cursor-pointer text-2xl hover:text-blue-600"
				style="text-decoration: none;"
				><i class="ri-linkedin-fill"></i></a
			>
			<a
				class="cursor-pointer text-2xl hover:text-blue-600"
				style="text-decoration: none;"
				><i class="ri-instagram-fill"></i></a
			>
			<a
				class="cursor-pointer text-2xl hover:text-blue-600"
				style="text-decoration: none;"><i class="ri-tiktok-fill"></i></a
			>
		</div>
		<p
			class="text-center text-lg gap-1.5 m-0 p-0 leading-normal"
		>
			<span
				><i class="ri-copyright-line w-fit pr-2"></i>2025 Western Canadian
				Undergraduate Chemistry Conference</span
			>
		</p>
	</div>
</footer>
