---
const categories = {
	Keynote: '#499FD4',
	Admin: '#FF6600',
	Plenary: '#F67795',
	Exploration: '#F7BF4B', // #FFFB00
	Leisure: '#077364',
	Break: '',
	Presentations: '#CA90CE',
	Workshop: '#D10838',
};

const textColors: Partial<Record<keyof typeof categories, string>> = {
	Leisure: '#FFFFFF',
	Workshop: '#FFFFFF',
};

type Props = {
	name: keyof typeof categories;
};

const { name }: Props = Astro.props;

function getTextColor(categoryName: keyof typeof categories): string {
	return textColors[categoryName] || 'black';
}
---

<p
	class="leading-0 m-0 rounded-lg px-4 py-2"
	style={`background-color: ${categories[name]}; color: ${getTextColor(name)}`}
>
	{name}
</p>

