---
// SimpleParallaxSection.astro
---

<section
	class="parallax-section relative flex h-fit min-h-screen w-screen items-center justify-center overflow-y-visible py-32 md:h-screen"
>
	<!-- Single background image with decorative elements -->
	<div class="decorative-background"></div>

	<!-- Centered text -->
	<div class="relative z-10 px-4 text-center">
		<h1
			class="pb-10 text-7xl font-medium text-black sm:text-[5rem] lg:text-[7.8rem]"
		>
			Uniting Elements of Innovation
		</h1>
	</div>
</section>

<style>
	.parallax-section {
		overflow: hidden;
	}

	.decorative-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/Elements.svg');
		background-size: fit;
		background-position: center center;
		z-index: 0;
		opacity: 0.7;
		will-change: transform;
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const background = document.querySelector('.decorative-background');
		const parallaxSpeed = 0.18;

		function updateParallaxPosition() {
			const scrollY = window.scrollY;
			background.style.transform = `translateY(${scrollY * parallaxSpeed}px)`;
		}

		updateParallaxPosition();

		window.addEventListener('scroll', () => {
			window.requestAnimationFrame(updateParallaxPosition);
		});
	});
</script>

