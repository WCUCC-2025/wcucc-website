---
import CountDownTimer from '../elements/CountDownTimer.astro';
---

<section
	class="flex h-screen w-screen flex-col items-start justify-center gap-4 bg-[url('/home-hero-bg-d.svg')] p-5 sm:p-10 md:p-14 lg:p-20"
>
	<div class="mb-0 flex flex-col gap-2">
		<div class="mb-0 flex flex-row items-center justify-start gap-4">
			<p class="mb-0 text-xl lg:text-2xl font-bold text-white">May 7 - 12, 2025</p>
			<a class="hidden sm:inline-block"
				><button
					class="rounded-lg border-2 border-solid border-black bg-white p-2 text-sm text-black transition-all duration-300 hover:cursor-not-allowed"
					>Add to Calendar <i class="ri-external-link-fill"
					></i></button
				></a
			>
		</div>
		<p class="mb-0 text-2xl lg:text-3xl font-light text-white">
			Western Canada Undergraduate Chemistry Conference
		</p>
	</div>
	<div class="flex flex-col gap-2">
		<h1 class="text-7xl sm:text-[5rem] lg:text-[7.8rem] text-white font-bold">WCUCC 2025</h1>
		<h1 class="mb-0 text-4xl lg:text-5xl text-white font-semibold">
			Discover how we<br class="sm:hidden"> <span id="typer" class="mb-0 text-wcucc-coral-400"
			></span>
		</h1>
		<div class="flex flex-row items-center between gap-4">
			<h4 class="my-0 text-2xl lg:text-3xl font-light text-white">
				@ The University of British Columbia, Okanagan
			</h4>
			<a
				class="hidden sm:inline-block w-full sm:w-auto"
				href="https://www.google.ca/maps/place/The+University+of+British+Columbia+-+Okanagan+Campus/@49.9398234,-119.3989527,17z/data=!3m1!4b1!4m5!3m4!1s0x537ded7da291f011:0x7ca879b9058df1a4!8m2!3d49.93982!4d-119.396764"
				><button
					class="text-sm rounded-lg p-2 border-0 bg-blue-600  text-white transition-all duration-300 hover:cursor-pointer hover:bg-blue-700"
					>Get Directions <i class="ri-external-link-fill text-[1rem]"
					></i></button
				></a
			>
		</div>
	</div>
	<CountDownTimer />
</section>
<script>
	import Typed from 'typed.js';
	new Typed('#typer', {
		strings:
			'innovate, create, design, synthesize, pipette, analyze, experiment, teach, learn'.split(
				', '
			),
		typeSpeed: 100,
		backSpeed: 50,
		backDelay: 1000,
		smartBackspace: true,
		loop: true,
		shuffle: true,
	});
</script>
