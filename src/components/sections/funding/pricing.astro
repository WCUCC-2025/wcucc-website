---
const benefits = [
	{
		name: 'Logo displayed in the conference program, banner & posters.',
		type: 'check',
	},
	{ name: 'Logo displayed on the website.', type: 'check' },
	{
		name: 'Post-conference partner email, social-media, thank you.',
		type: 'check',
	},
	{
		name: 'Item pamphlet added to registration package.',
		type: 'value',
		values: ['Large', 'Small', 'Small', ''],
	},
	{
		name: 'Invitation to panel',
		type: 'value',
		values: ['30 min', '20 min', '10 min', ''],
	},
	{ name: 'Tickets to Gala', type: 'value', values: ['3', '2', '1', ''] },
	{ name: 'Company information/advertisement in the program', type: 'check' },
	{ name: 'Company banners displayed at conference', type: 'check' },
	{ name: 'Logo displayed on main page of the website', type: 'check' },
	{ name: 'Company Lanyard', type: 'check' },
	{ name: 'Name tags of attendees will have company logo', type: 'check' },
];

const tiers = [
	{
		name: 'Platinum',
		color: 'bg-[#3D3E3E]',
		price: '$2000',
		textColor: 'text-white',
		benefits: [
			true,
			true,
			true,
			'Large',
			'30 min',
			'3',
			true,
			true,
			true,
			true,
			true,
		],
	},
	{
		name: 'Gold',
		color: 'bg-[#F4C430]',
		price: '$1000',
		textColor: 'text-gray-800',
		benefits: [
			true,
			true,
			true,
			'Small',
			'20 min',
			'2',
			true,
			true,
			true,
			false,
			false,
		],
	},
	{
		name: 'Silver',
		color: 'bg-[#C0C0C0]',
		price: '$500',
		textColor: 'text-gray-800',
		benefits: [
			true,
			true,
			true,
			'Small',
			'10 min',
			'1',
			false,
			false,
			false,
			false,
			false,
		],
	},
	{
		name: 'Bronze',
		color: 'bg-[#CD7F32]',
		price: '$250',
		textColor: 'text-gray-800',
		benefits: [
			true,
			true,
			true,
			'',
			'',
			'',
			false,
			false,
			false,
			false,
			false,
		],
	},
];
---

<div class="p-4">
	<div class="overflow-x-auto">
		<table class="w-full border-spacing-x-2">
			<thead>
				<tr>
					<th
						class="benefits-column w-1/5 bg-white p-4 text-left text-2xl font-bold text-gray-800"
						>Benefits</th
					>
					{
						tiers.map(tier => (
							<th
								class={`p-4 text-left text-white ${tier.color} w-1/5 text-2xl font-bold`}
							>
								{tier.name}
								<p class="font-normal">{tier.price}</p>
							</th>
						))
					}
				</tr>
			</thead>
			<tbody>
				{
					benefits.map((benefit, index) => (
						<tr class="border-b border-gray-200 text-xl">
							<td class="benefits-column bg-white p-4 text-gray-800">
								{benefit.name}
							</td>
							{tiers.map(tier => (
								<td
									class={`p-4 text-center ${tier.color} ${tier.textColor}`}
								>
									{benefit.type === 'value' ?
										tier.benefits[index]
									: tier.benefits[index] ?
										<span
											class={`inline-block h-3 w-3 rounded-full ${tier.name === 'Platinum' ? 'bg-white' : 'bg-gray-800'}`}
										/>
									:	<span class="inline-block h-3 w-3 rounded-full border-2 border-gray-400" />
									}
								</td>
							))}
						</tr>
					))
				}
			</tbody>
		</table>
	</div>
</div>

<style>
	.benefits-column {
		border-left: 1px solid black;
		border-right: 1px solid black;
	}

	thead th.benefits-column {
		border-top: 1px solid black;
	}

	tbody tr:last-child td.benefits-column {
		border-bottom: 1px solid black;
	}

	tr:hover td {
		transition: all 0.2s ease-in-out;
	}

	tr:hover td:not(:first-child) {
		opacity: 0.9;
	}
</style>

