---
type Props = {
	name: string;
	logo: string;
	href: string;
};
const { name, logo, href }: Props = Astro.props;
---

<a
	{...href !== '#' ? { href } : {}}
	class={`flex h-full flex-col items-center justify-center gap-4 rounded-md bg-white p-10 shadow-lg transition-all duration-300 ease-in-out hover:shadow-xl ${href != '#' ? `cursor-pointer` : `cursor-not-allowed`}`}
	style="text-decoration: none;"
>
	{logo && <img class="h-auto w-full" src={`sponsors/${logo}`} alt={name} />}
	<h6 class="m-0 p-0 text-2xl font-bold leading-none">{name}</h6>
</a>

<style is:inline>
	a {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
</style>
